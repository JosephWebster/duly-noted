nchors - replace them with links. ","code":"       "},{"number":146,"code":"        while (match = XRegExp.exec(newComment, this.linkRegExp, pos, false)) {"},{"number":147,"code":"            let tag =  _.findWhere(this.tags, {anchor: match[1]});"},{"number":148,"code":"            if (!tag) {"},{"number":149,"code":"                logger.error(\"link: \" + match[1] + \" in \" + fileName + \":\" + line + \" does not have a cooresponding anchor, so link cannot be created.\");"},{"number":150,"code":"            } else {"},{"number":151,"code":"                logger.debug(\"found internal link: \" + match[1]);"},{"number":152,"code":"                newComment =  comment.substr(0, match.index) +"},{"number":153,"code":"                \" [\" + match[1] + \"](\" + linkPrefix + tag.path + \".html#\" + match[1] + \") \" +"},{"number":154,"code":"                newComment.substr(match.index + match[0].length);"},{"number":155,"code":"            }"},{"number":156,"code":"            pos = match.index + match[0].length;"},{"number":157,"code":"        }"},{"number":158,"code":""},{"number":159,"code":"        return newComment;"},{"number":160,"code":"    }"},{"number":161,"code":""},{"number":162,"code":"    replaceExternalLinks(comment: string, fileName: string, line: number) {"},{"number":163,"code":"        let pos = 0;"},{"number":164,"code":"        let match;"},{"number":165,"code":"        let newComment: string = comment;"},{"number":166,"code":""},{"number":167,"comment":" Look at the line for external references - replace them with links. ","code":"       "},{"number":168,"code":"        while (match = XRegExp.exec(newComment, this.linkRegExp, pos, false)) {"},{"number":169,"code":"            let tagArray = match[1].split(\"/\");"},{"number":170,"code":"            let tag =  _.findWhere(this.externalReferences, {anchor: tagArray[0]});"},{"number":171,"code":""},{"number":172,"code":"            if (tag) {"},{"number":173,"code":"                logger.debug(\"found external link: \" + match[1]);"},{"number":174,"code":"                for (let i = 1; i < tagArray.length; i++) {"},{"number":175,"code":"                    tag.path = tag.path.replace(\"::\", tagArray[i]);"},{"number":176,"code":"                }"},{"number":177,"code":""},{"number":178,"code":"                newComment =  comment.substr(0, match.index - 1) +"},{"number":179,"code":"                \" [\" + match[1] + \"](\" + tag.path + \") \" +"},{"number":180,"code":"                newComment.substr(match.index + match[0].length);"},{"number":181,"code":"            }"},{"number":182,"code":""},{"number":183,"code":"            pos = match.index + match[0].length;"},{"number":184,"code":"        }"},{"number":185,"code":"        return newComment;"},{"number":186,"code":"    }"},{"number":187,"code":""},{"number":188,"code":"    generateIndexPage(): void {"},{"number":189,"code":"        logger.info(\"generating index.html\");"},{"number":190,"code":"        let that = this;"},{"number":191,"code":""},{"number":192,"code":"        let outputMap = {"},{"number":193,"code":"            project: this.projectName,"},{"number":194,"code":"            collections: [],"},{"number":195,"code":"            files: [],"},{"number":196,"code":"            readme: \"\""},{"number":197,"code":"        };"},{"number":198,"code":""},{"number":199,"comment":" collections","code":"       "},{"number":200,"code":"        let collections = that.referenceCollection.getTagsByCollection();"},{"number":201,"code":""},{"number":202,"code":"        for (let i = 0; i < collections.length; i++) {"},{"number":203,"code":"            let anchors = _.clone(collections[i].anchors);"},{"number":204,"code":"            for (let x = 0; x < anchors.length; x++) {"},{"number":205,"code":"                let linkPrefix = that.getLinkPrefix(anchors[x].path);"},{"number":206,"code":"                anchors[x].path = anchors[x].path + \".html#\" + anchors[x].linkStub;"},{"number":207,"code":"            }"},{"number":208,"code":"            outputMap.collections.push({"},{"number":209,"code":"                name: collections[i].name,"},{"number":210,"code":"                anchors: anchors"},{"number":211,"code":"            });"},{"number":212,"code":"        }"},{"number":213,"code":""},{"number":214,"code":"        files(this.outputDir, (error, files) => {"},{"number":215,"code":""},{"number":216,"comment":" Files","code":"           "},{"number":217,"code":"            for (let i = 0; i < files.length; i++) {"},{"number":218,"code":"                let fileNameArray = files[i].split(\".\");"},{"number":219,"code":"                let extension = fileNameArray[fileNameArray.length - 1];"},{"number":220,"code":"                if (extension === \"html\") {"},{"number":221,"code":"                    let pathArray: string[] = files[i].split(\"/\");"},{"number":222,"comment":" shift the output dir off the file name.","code":"                    pathArray.shift();"},{"number":223,"code":"                    let path = pathArray.join(\"/\");"},{"number":224,"code":"                    outputMap.files.push({path: path});"},{"number":225,"code":"                }"},{"number":226,"code":"            }"},{"number":227,"code":""},{"number":228,"code":"            outputMap.readme = readFileSync(that.readme).toString();"},{"number":229,"code":"            let output = this.indexTemplate(outputMap);"},{"number":230,"code":"            writeFileSync(path.join(that.outputDir, \"index.html\"), output, { flag: \"w\" });"},{"number":231,"code":"        });"},{"number":232,"code":"    }"},{"number":233,"code":""},{"number":234,"code":"    cleanUp(err, files) {"},{"number":235,"code":"         if (err) {"},{"number":236,"code":"            logger.error(err.message);"},{"number":237,"code":"        } else {"},{"number":238,"code":"            for (let i = 0; i < files.length; i++) {"},{"number":239,"code":"                unlinkSync(files[i]);"},{"number":240,"code":"            }"},{"number":241,"code":"        }"},{"number":242,"code":"    }"},{"number":243,"code":""},{"number":244,"comment":" > NOTE: Without this code, the link will not properly navigated deeply nested pages with relative linking.","code":"   "},{"number":245,"code":"    getLinkPrefix(fileName: string): string {"},{"number":246,"code":"        let fileNameAsArray = fileName.split(\"/\");"},{"number":247,"code":"        let linkPrefix = \"\";"},{"number":248,"code":"        for (let i = 0; i < fileNameAsArray.length - 2; i++) {"},{"number":249,"code":"            linkPrefix += \"../\";"},{"number":250,"code":"        }"},{"number":251,"code":""},{"number":252,"code":"        return linkPrefix;"},{"number":253,"code":"    }"},{"number":254,"code":""},{"number":255,"code":"    markdownHelper(context, options) {"},{"number":256,"code":"       return marked(context);"},{"number":257,"code":"    }"},{"number":258,"code":""},{"number":259,"code":"    ifCondHelper(v1, v2, options) {"},{"number":260,"code":"        if (v1 === v2) {"},{"number":261,"code":"            return options.fn(this);"},{"number":262,"code":"        }"},{"number":263,"code":"        return options.inverse(this);"},{"number":264,"code":"    };"},{"number":265,"code":"}"}],"type":"typescript"}